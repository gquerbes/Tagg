<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Tagg.Views.ProfileViews.ProfileViewCell">
    <ViewCell>
            <ViewCell.View>
            <Grid RowSpacing="0" ColumnSpacing="10" BackgroundColor="{DynamicResource BackgroundColor}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <BoxView HeightRequest="10" WidthRequest="10" Color="Blue" Margin="2" Grid.Column="0" Grid.Row="0" />
                <Label Text="Cool Person" FontSize="Medium" FontAttributes="Bold" Grid.Row="0" Grid.Column="1" TextColor="{DynamicResource TextPrimaryColor}" />
                <Label Text="15 miles away" FontSize="Caption" VerticalTextAlignment="Start" FontAttributes="Italic" Grid.Row="1" Grid.Column="1" TextColor="{DynamicResource TextSecondaryColor}"/>
            </Grid>
    </ViewCell.View>
    </ViewCell>
</DataTemplate>
